{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "baseUrl": "./", // Basis für alle relativen Pfade
      "paths": {
        "@/*": ["src/*"] // Alias für src/
      },
      "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"],
      "types": ["node", "vitest/globals"]
    },
    "include": [
      "./src/**/*.ts",
      "./src/**/*.d.ts",
      "./src/**/*.tsx",
      "./src/**/*.vue",
      "vite.config.ts",
      "vitest.config.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }  